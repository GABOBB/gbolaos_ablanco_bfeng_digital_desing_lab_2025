module p3 #(parameter N =6) (
	input logic decrementar,
	input logic reset,
	input logic mas,
	input logic menos,
	input logic [N-1:0] inicial,
	output logic [N-1:0] out
);

always_ff @(negedge decrementar or posedge reset or negedge mas, or negedge menos) begin
    if (rst)
        out <= inicial;  // Reset asÃ­ncrono, establece el valor inicial
    else if (!decrementar)
        out <= out - 1;  // Decremento
	 else if (!mas)
        inicial <= inicial + 1; // +1 al valor inicial
	 else if (!menos and inicial != 0)
		  inicial <= inicial - 1; // -1 al valor inicial
end

endmodule